  build-depends:
    , base                  ^>=4.14.3.0
    , optparse-applicative
    , optparse-generic
    , psel
    , rio

  hs-source-dirs:     app
  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    ImportQualifiedPost
